              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">正在关注</h3>
                <div class="space-y-3">
                  <div v-for="user in followingList" :key="user.id" class="flex items-center space-x-3">
                    <div class="w-10 h-10 rounded-full overflow-hidden bg-gray-200">
                      <img v-if="user.avatar" :src="user.avatar" :alt="user.username" class="w-full h-full object-cover" />
                      <div v-else class="w-full h-full flex items-center justify-center bg-blue-500 text-white text-sm font-bold">
                        {{ user.username.charAt(0).toUpperCase() }}
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">{{ user.username }}</p>
                      <p class="text-xs text-gray-500 truncate">{{ user.bio || '暂无简介' }}</p>
                    </div>
                  </div>
                </div>
                <div v-if="followingList.length === 0" class="text-center text-gray-500 py-4">
                  <p class="text-sm">暂无关注的用户</p>
                </div>
              </div>

              <!-- 最近活动 -->
              <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">最近活动</h3>
                <div class="space-y-3">
                  <div v-for="activity in recentActivities" :key="activity.id" class="text-sm">
                    <div class="flex items-start space-x-2">
                      <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                      <div>
                        <p class="text-gray-700">{{ activity.description }}</p>
                        <p class="text-gray-500 text-xs mt-1">{{ formatDate(activity.createdAt) }}</p>
                      </div>
                    </div>
                  </div>
                </div>
                <div v-if="recentActivities.length === 0" class="text-center text-gray-500 py-4">
                  <p class="text-sm">暂无最近活动</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- 粉丝列表弹窗 -->
    <FollowersModal
      :isOpen="showFollowersModal"
      :userId="userProfile?.id"
      @close="showFollowersModal = false"
    />

    <!-- 关注列表弹窗 -->
    <FollowingModal
      :isOpen="showFollowingModal"
      :userId="userProfile?.id"
      @close="showFollowingModal = false"
    />
  </div>
</template>

<script setup>
import { ref, computed, onMounted } from 'vue'
import { useRoute } from 'vue-router'
import Sidebar from '../common/Sidebar.vue'
import FollowersModal from './FollowersModal.vue'
import FollowingModal from './FollowingModal.vue'
import { userAPI } from '../../utils/api.js'
import notification from '../../utils/notification.js'

const route = useRoute()

// 响应式数据
const loading = ref(true)
const userProfile = ref(null)
const strategies = ref([])
const followingList = ref([])
const recentActivities = ref([])
const isFollowing = ref(false)
const followLoading = ref(false)
const showFollowersModal = ref(false)
const showFollowingModal = ref(false)

// 计算属性
const isOwnProfile = computed(() => {
  // 这里需要获取当前登录用户的ID进行比较
  return route.params.userId === 'me' || route.params.userId === getCurrentUserId()
})

const hasContactInfo = computed(() => {
  if (!userProfile.value) return false
  return userProfile.value.phone || userProfile.value.wechatId || 
         userProfile.value.telegram || userProfile.value.twitter || userProfile.value.website
})

// 获取当前用户ID
const getCurrentUserId = () => {
  // 这里应该从认证状态中获取当前用户ID
  const token = localStorage.getItem('auth_token')
  if (token) {
    try {
      const payload = JSON.parse(atob(token.split('.')[1]))
      return payload.user_id?.toString()
    } catch (error) {
      return null
    }
  }
  return null
}

// 格式化日期
const formatDate = (dateString) => {
  return new Date(dateString).toLocaleDateString('zh-CN')
}

const formatJoinDate = (dateString) => {
  return `加入于 ${new Date(dateString).getFullYear()}年${new Date(dateString).getMonth() + 1}月`
}

// 获取用户资料
const fetchUserProfile = async (userId) => {
  try {
    loading.value = true
    const response = await userAPI.getPublicProfile(userId)

    if (response.status === 'success') {
      userProfile.value = response.data.user
      strategies.value = response.data.strategies || []
      followingList.value = response.data.following || []
      recentActivities.value = response.data.activities || []
      isFollowing.value = response.data.isFollowing || false
    } else {
      userProfile.value = null
    }
  } catch (error) {
    console.error('获取用户资料失败:', error)
    userProfile.value = null
  } finally {
    loading.value = false
  }
}

// 切换关注状态
const toggleFollow = async () => {
  if (!userProfile.value) return

  followLoading.value = true
  try {
    const response = await userAPI.toggleFollow(userProfile.value.id)

    if (response.status === 'success') {
      isFollowing.value = !isFollowing.value
      // 更新关注者数量
      if (isFollowing.value) {
        userProfile.value.stats.followers++
      } else {
        userProfile.value.stats.followers--
      }

      notification.success(
        isFollowing.value ? '关注成功' : '取消关注成功',
        '操作成功'
      )
    } else {
      notification.error(response.message || '操作失败', '错误')
    }
  } catch (error) {
    notification.error(error.message || '操作失败', '错误')
  } finally {
    followLoading.value = false
  }
}

// 打开粉丝列表弹窗
const openFollowersModal = () => {
  showFollowersModal.value = true
}

// 打开关注列表弹窗
const openFollowingModal = () => {
  showFollowingModal.value = true
}

// 组件挂载时获取数据
onMounted(() => {
  const userId = route.params.userId || 'me'
  fetchUserProfile(userId)
})
</script>
